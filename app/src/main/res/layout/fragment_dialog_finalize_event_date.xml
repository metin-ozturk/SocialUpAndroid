<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/finalizeEventDateRootLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
            android:id="@+id/finalizeEventDateTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Multipe dates have same vote. Please select one:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/finalizeEventDateConstraintLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/finalizeEventDateTitleTextView" />

    <Button
            android:id="@+id/finalizeEventDateFinalizeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finalize Date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/finalizeEventDateConstraintLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>