<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:alpha="0.8">

    <TextView
            android:id="@+id/ListLikeRecyclerViewTitle"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Result"
            android:layout_weight="0.8"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/ListLikeRecyclerViewSubtitle"
            android:layout_weight="0.2" android:textSize="24sp" android:gravity="end"/>
</LinearLayout>