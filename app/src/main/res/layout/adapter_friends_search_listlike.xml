<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@drawable/imageplaceholder"
            android:layout_weight="1" android:id="@+id/friendsSearchImageViewListlike"
            android:scaleType="centerCrop"
            android:layout_marginStart="1dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="1dp"/>
    <TextView
            android:text="TextView"
            android:layout_height="80dp" android:id="@+id/friendsSearchTextViewListlike"
            android:layout_weight="1" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="1dp"
            app:layout_constraintStart_toEndOf="@+id/friendsSearchImageViewListlike" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="40sp" android:gravity="center_vertical"
            android:layout_width="0dp" android:layout_marginTop="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>