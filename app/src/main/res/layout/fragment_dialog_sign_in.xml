<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:minWidth="350dp">

    <Button
            android:text="Sign In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentDialogSignInButton"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fragmentDialogSignInPasswordInput"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/fragmentDialogSignInPasswordInput"
            android:password="true"
            app:layout_constraintTop_toTopOf="@+id/fragmentDialogSignInPassword"
            app:layout_constraintBottom_toBottomOf="@+id/fragmentDialogSignInPassword" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragmentDialogSignInPassword" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Password:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentDialogSignInPassword" android:textSize="30sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/fragmentDialogSignInEmail" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Email:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/fragmentDialogSignInEmail"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textSize="30sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/fragmentDialogSignInEmailInput"
            app:layout_constraintStart_toEndOf="@+id/fragmentDialogSignInEmail" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/fragmentDialogSignInEmail"
            app:layout_constraintTop_toTopOf="@+id/fragmentDialogSignInEmail"/>
</androidx.constraintlayout.widget.ConstraintLayout>