<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/setTimeTitleDialogFragment" android:textSize="24sp"
            tools:text="TextView" android:textColor="#FFFFFF"/>
    <TimePicker android:layout_width="match_parent" android:layout_height="wrap_content"
                android:id="@+id/setTimeTimePickerDialogFragment">

    </TimePicker>
    <Button
            android:text="Confirm Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/setTimeButtonDialogFragment"
            android:textColor="@android:color/white"/>

</LinearLayout>